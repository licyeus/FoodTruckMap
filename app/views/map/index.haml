%p.truck-filter
  %label.control-label(for='filter') Filter
  %select#filter(style='width: 100%' multiple='multiple'){'ng-model' => 'active_tags'}
    %option{'ng-repeat' => 'tag in food_trucks.all_tags'} {{tag.name}}

%h4 Food Trucks
%table.table.table-striped.table-bordered.table-hover
  %tr{"ng-repeat" => "truck in food_trucks.all_trucks | filter_by_tags:active_tags"}
    %td
      %a{href: "#", "ng-click" => "food_trucks.show_truck(truck)"} {{truck.name}}
