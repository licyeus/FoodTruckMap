%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title Seattle Food Trucks
    = stylesheet_link_tag 'application', media: 'all'
    %link{href: "http://cdn.leafletjs.com/leaflet-0.5/leaflet.css", rel: "stylesheet"}/
    = csrf_meta_tags
  %body{"ng-app" => "food_truck_app", "ng-controller" => "food_trucks_controller as food_trucks"}
    .container.fill-height
      .row.fill-height
        .fill-height.col-sm-3.navigation
          %h1
            = link_to 'Food Truck Map', root_path
            %span.beta BETA
          = yield
        #map.col-sm-9.fill-height
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"}
    %script{src: "//ajax.googleapis.com/ajax/libs/angularjs/1.1.5/angular.min.js"}
    %script{src: "//ajax.googleapis.com/ajax/libs/angularjs/1.1.5/angular-resource.min.js"}
    %script{src: "//cdn.leafletjs.com/leaflet-0.5/leaflet.js"}
